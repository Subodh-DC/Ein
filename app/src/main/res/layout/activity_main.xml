<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/topic_history1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginHorizontal="15dp"
                android:scaleType="fitCenter"
                android:id="@+id/himage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/lalkila"/>

            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:id="@+id/quotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="&quot;Make each day your masterpiece&quot;" />



            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textColor="@color/black"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Paragraphs"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:id="@+id/himageButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/paragraphs"
                    android:layout_height="wrap_content"/>

                <Button
                    android:textColor="@color/black"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Oneline"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:id="@+id/himageButton1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/onelines"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textColor="@color/black"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Quiz"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:id="@+id/himageButton2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/quize"
                    android:layout_height="wrap_content"/>

                <Button
                    android:textColor="@color/black"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Trick"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:id="@+id/himageButton3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trick"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>